<nav class="main-header__nav">
  <ul class="main-header__item-list">
      {{!-- user links --}}
      <li class="main-header__item"><a class="{{#if activeShop}}active{{/if}}" href="/">Shop</a></li>
      {{!-- admin only links --}}
      {{#if isLoggedIn}}
        <li class="main-header__item"><a class="{{#if activeProducts}}active{{/if}}" href="/products">Products</a></li>
        <li class="main-header__item"><a class="{{#if activeCart}}active{{/if}}" href="/cart">Cart</a></li>
        <li class="main-header__item"><a class="{{#if activeOrders}}active{{/if}}" href="/orders">Orders</a></li>
        <li class="main-header__item"><a class="{{#if activeAddProduct}}active{{/if}}" href="/admin/add-product">Add Product</a></li>
        <li class="main-header__item"><a class="{{#if activeAdminProducts}}active{{/if}}" href="/admin/products">Admin Products</a></li>
      {{/if}}
  </ul>
  <ul class="main-header__item-list">
    {{#if isLoggedIn}}
    <li class="main-header__item">
      <form action="/logout" method="POST">
        <input type="hidden" value="{{csrfToken}}" name="_csrf">
        <button class="" type="submit">Logout</button>
      </form>
    </li>
    {{else}}
    <li class="main-header__item">
      <a class="{{#if activeLogin}}active{{/if}}" href="/login">Login</a>
      <a class="{{#if activeSignup}}active{{/if}}" href="/signup">Signup</a>
    </li>
    {{/if}}
  </ul>
</nav>