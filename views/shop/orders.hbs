<main>
    {{#if isOrderExists }}
        <div class="orders">
          <ul>
            {{#each orders}}
            <li class="order-item card">
              <p><b>{{ this._id }}</b></p>
              <ul>
                {{#each this.products}}
                  <li>
                    <p>Name: <b>{{this.product.title}}</b>  
                      <span>Quantity: <b>{{this.quantity}}</b></span>
                    </p>
                  </li>
                {{/each}}
              </ul>
            </li>     
            {{/each}}
          </ul>
      </div>
    {{else}}
    <h1>No Orders</h1>
    {{/if}}
</main>